{
  "name": "sistema-financeiro-frontend-tests",
  "version": "1.0.0",
  "description": "Testes frontend para Sistema Financeiro",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:lazy": "jest test_lazy_loader"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "static/**/*.js",
      "!static/vendor/**",
      "!static/**/*.min.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "html", "lcov"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
